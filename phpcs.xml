<?xml version="1.0"?>
<ruleset name="Asiantech PHP Coding Standard">
    <!-- Default directory to check if there are no directories argurment  -->
    <file>app</file>

    <!-- Ignore Providers directory -->
    <exclude-pattern>*/Providers/*</exclude-pattern>

    <!-- Add PSR1 standard -->
    <rule ref="PSR1"></rule>

    <!-- Add PSR2 standard -->
    <rule ref="PSR2"></rule>

    <!-- Add PEAR.Commenting.FunctionComment standard -->
    <!-- <rule ref="PEAR.Commenting.FunctionComment">
        <properties>
           <property name="missingReturn" value="false"/>
        </properties>
    </rule> -->

    <!-- Add  Generic.Commenting.DocComment standard-->
    <rule ref="Generic.Commenting.DocComment"></rule>
</ruleset>
